<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MataKuliah.DetailMataKuliahActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewMataKuliah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mata Kuliah"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewSks"
        android:background="#FFFFFF"
        android:elevation="2dp"/>

    <!-- SKS -->
    <TextView
        android:id="@+id/textViewSks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SKS"
        android:textSize="20sp"
        android:textColor="#4CAF50"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMataKuliah"
        app:layout_constraintBottom_toTopOf="@+id/textViewDosen"
        android:background="#FFFFFF"
        android:elevation="2dp"/>

    <!-- Dosen -->
    <TextView
        android:id="@+id/textViewDosen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dosen"
        android:textSize="20sp"
        android:textColor="#2196F3"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSks"
        android:background="#FFFFFF"
        android:elevation="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
